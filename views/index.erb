<h1>Band Tracker</h1>

<h4>Add Band:</h4>

<form action:"/" method="post">
  <div class="form-group">
    <input name="band_name" class="form-control" type="test" placeholder="Enter Band Here">
    <br>
    <button class="btn btn-success" value="submit">Add Band!</button>
  </div>
<form>

<hr>

<% if @bands.any?() %>
  <h4>Bands:</h4>
  <ul>
  <% @bands.each() do |band| %>
    <li>
      <a href="/band/<%= band.id() %>"><%= band.name() %></a>
    </li>
  <% end %>
  </ul>
<% else %>
  <p>You have no bands!</p>
<% end %>

<hr>
<h4>Add Venue:</h4>

<form action:"/" method="post">
  <div class="form-group">
    <input name="venue_name" class="form-control" type="test" placeholder="Enter Venue Here">
    <br>
    <button class="btn btn-success" value="submit">Add Venue!</button>
  </div>
<form>

<hr>

<% if @venues.any?() %>
  <h4>Venues:</h4>
  <ul>
  <% @venues.each() do |venue| %>
    <li><%= venue.name() %></li>
  <% end %>
  </ul>
<% else %>
  <p>You have no venues!</p>
<% end %>
